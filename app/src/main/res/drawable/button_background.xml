<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <color android:color="#E87B7B" /> <!-- Màu nền mờ -->
            <corners android:radius="12dp" /> <!-- Bán kính bo tròn -->
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#00A8E8" /> <!-- Màu nền highlight -->
            <corners android:radius="12dp" /> <!-- Bán kính bo tròn -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Màu nền mặc định -->
            <corners android:radius="12dp" /> <!-- Bán kính bo tròn -->
        </shape>
    </item>
</selector>